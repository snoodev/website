---
let year = new Date().getFullYear();
---

<footer class="desktop-footer">
  <hr />
  <div class="footer-wrapper">
    <div class="footer-links">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/services">Services</a></li>
        <li><a href="/portfolio">Portfolio</a></li>
      </ul>
    </div>

    <div class="footer-logo">
      <img class="footer-img" src="/footer-logo.svg" alt="logo" />
      <h4>Snoodev</h4>
    </div>

    <div class="footer-links-right">
      <ul>
        <li><a href="/pricing">Pricing</a></li>
        <li><a href="/privacy-policy">Privacy policy</a></li>
        <li><a href="/about">About us</a></li>
      </ul>
    </div>
  </div>

  <div class="lower-footer-wrapper">
    <div class="social-links">
      <a href="https://www.instagram.com/snoodev/" target="_blank">
        <img src="/instagram.svg" alt="instagram-link" />
      </a>

      <a href="https://snoodev.t.me" target="_blank">
        <img src="/telegram.svg" alt="telegram-link" />
      </a>

      <a href="mailto:hello@snoodev.com" target="_blank">
        <img src="/email.svg" alt="send-email" />
      </a>

      <a href="https://facebook.com/snoodev" target="_blank">
        <img src="/facebook.svg" alt="facebook-link" />
      </a>
    </div>

    <div class="copyright">
      <p>© snoodev {year}</p>
    </div>
  </div>
</footer>

