---
import Toast from "./Toast.astro";
---

<div class="form-popup" id="hello">
  <button id="closeButton">X</button>
  <form name="hello" class="form-container">
    <label for="name">Name</label>

    <input type="text" id="name" placeholder="Enter your name" />

    <label for="email">Email address</label>
    <small id="emailWarning">Please let us know your valid email address!</small
    >
    <input type="email" id="email" placeholder="name@example.com" />

    <label for="budget">What's your budget?</label>
    <small id="budgetWarning">Please include the appropriate budget!</small>
    <input type="text" id="budget" placeholder="â‚¬500" />

    <label for="Message">Brief description of your project</label>

    <textarea id="message" placeholder="I'd like help with..." rows="10"
    ></textarea>

    <button type="button" id="submit">Submit</button>
    <button type="button" id="greyedOutSubmit">Submit</button>
  </form>
</div>

<Toast />

<style>
  #hello {
    display: none;
  }

  .form-popup {
    width: fit-content;
    height: fit-content;
    max-width: 15em;
    max-height: 35em;
    display: none;
    position: fixed;
    bottom: 0;
    right: 1em;
    border-radius: var(--border-radius);
    border: 2px dashed var(--color-text);
    padding: 2em;
    z-index: 9;
    background-color: var(--color-bg);
  }

  .form-container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
  }

  input {
    max-width: 15em;
  }

  #name,
  #email,
  #budget {
    width: auto;
  }

  #submit {
    display: none;
    height: 3em;
    width: 100%;
    line-height: 1;
    margin: 0;
    padding: 1em;
  }

  #greyedOutSubmit {
    display: block;
    height: 3em;
    width: 100%;
    line-height: 1;
    margin: 0;
    padding: 1em;
    background-color: grey;
    color: var(--color-bg);
    cursor: not-allowed;
  }

  #closeButton {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-bg);
    position: absolute;
    top: -5px;
    right: 5px;
    width: 5px;
    height: 5px;
    font-size: 20px;
    font-weight: bold;
    color: var(--color-text);
    cursor: pointer;
    opacity: 20%;
    border-radius: var(--border-radius);
    border: 2px dashed var(--color-text);
  }

  #closeButton:hover {
    opacity: 100%;
  }

  #emailWarning {
    display: none;
    color: var(--color-secondary-accent);
  }

  #budgetWarning {
    display: none;
    color: var(--color-secondary-accent);
  }

  .error {
    transition: all 0.3s;
  }

  .error.error {
    border-color: var(--color-secondary-accent);
    box-shadow: 0 0 10px var(--color-secondary-accent);
  }

  .inputHighlight {
    border-color: var(--color-accent);
    box-shadow: 0 0 10px var(--color-accent);
  }

  @media only screen and (max-width: 900px) {
    .form-popup {
      font-size: 2em;
      width: fit-content;
      height: fit-content;
      max-width: 19em;
      max-height: 35em;
      display: none;
      position: fixed;
      bottom: 0;
      right: 1em;
      border-radius: var(--border-radius);
      border: 2px dashed var(--color-text);
      padding: 2em;
      z-index: 9;
      background-color: var(--color-bg);
    }

    .form-container {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: center;
    }

    input {
      max-width: 15em;
    }

    #name,
    #email,
    #budget {
      width: auto;
    }

    #submit {
      font-size: 1em;
      height: 2em;
      width: 100%;
      line-height: 1;
      margin: 0;
      padding: 0;
    }

    #greyedOutSubmit {
      font-size: 1em;
      height: 2em;
      width: 100%;
      line-height: 1;
      margin: 0;
      padding: 0;
    }

    #closeButton {
      top: 15px;
      right: 15px;
      width: 75px;
      height: 75px;
      font-size: 35px;
      opacity: 100%;
    }
  }
</style>

<script>
  import supabase from "../config/supabaseClient";

  const submit = document.getElementById("submit");
  const closeForm = document.getElementById("closeButton");
  const form = document.getElementById("hello");

  submit.addEventListener("click", function () {
    sendForm();
    clearForm();
  });

  function clearForm() {
    const inputElements = document.querySelectorAll("input");
    const textareaInput = document.getElementById("message");
    const submit = document.getElementById("submit");
    const greyedOutButton = document.getElementById("greyedOutSubmit");
    const emailWarning = document.getElementById("emailWarning");
    const budgetWarning = document.getElementById("budgetWarning");

    inputElements.forEach((input) => {
      input.value = "";
    });
    textareaInput.value = "";
    submit.style.display = "none";
    greyedOutButton.style.display = "block";
    emailWarning.style.display = "none";
    budgetWarning.style.display = "none";

    let elements = document.querySelectorAll(
      "#name, #email, #budget, #message"
    );
    for (let i = 0; i < elements.length; i++) {
      elements[i].classList.remove("error");
    }
  };

  async function sendForm() {
    let name = document.getElementById("name").value;
    let email = document.getElementById("email").value;
    let budget = document.getElementById("budget").value;
    let message = document.getElementById("message").value;
    let toast = document.getElementById("toast");
    const { data, error } = await supabase
      .from("users")
      .insert({ name: name, email: email, budget: budget, message: message });

    if (error) {
      console.log(error);
    }

    if (data) {
      console.log(data);
    }

    toast.style.visibility = "unset";

    form.style.display = "none";

    setTimeout(function () {
      toast.style.display = "none";
    }, 3000);

    clearForm();
  }

  closeForm.addEventListener("click", function () {
    form.style.display = "none";
    clearForm();
  });

  function checkInput(event) {
    const emailError = document.getElementById("emailWarning");
    const budgetError = document.getElementById("budgetWarning");
    const inputElement = event.target;
    const inputId = inputElement.id;

    if (
      inputId === "name" ||
      inputId === "email" ||
      inputId === "budget" ||
      inputId === "message"
    ) {
      if (!inputElement.value) {
        inputElement.classList.add("error");
      } else {
        inputElement.classList.remove("error");
      }

      if (inputId === "email") {
        const emailIsValid = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(
          inputElement.value
        );
        if (!emailIsValid) {
          inputElement.classList.add("error");
          emailError.style.display = "block";
        } else {
          inputElement.classList.remove("error");
          emailError.style.display = "none";
        }
      }

      if (inputId === "budget") {
        const budgetIsValid = /\d/.test(inputElement.value);

        if (!budgetIsValid) {
          inputElement.classList.add("error");
          budgetError.style.display = "block";
        } else {
          inputElement.classList.remove("error");
          budgetError.style.display = "none";
        }
      }
    }

    const nameInput = document.getElementById("name");
    const emailInput = document.getElementById("email");
    const budgetInput = document.getElementById("budget");
    const messageInput = document.getElementById("message");
    const inputsAreEmpty =
      !nameInput.value ||
      !emailInput.value ||
      !budgetInput.value ||
      !messageInput.value;

    if (!inputsAreEmpty) {
      document.getElementById("submit").style.display = "block";
      document.getElementById("greyedOutSubmit").style.display = "none";
    } else {
      document.getElementById("submit").style.display = "none";
      document.getElementById("greyedOutSubmit").style.display = "block";
    }
  }

  document.getElementById("name").addEventListener("blur", checkInput);
  document.getElementById("email").addEventListener("blur", checkInput);
  document.getElementById("budget").addEventListener("blur", checkInput);
  document.getElementById("message").addEventListener("blur", checkInput);
</script>
