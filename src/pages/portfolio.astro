---
import Layout from "../layouts/Layout.astro";
const pageTitle = "Snoodev | Portfolio";
const allProjects = await Astro.glob("./portfolio/*.md");

const projects = {
  name: "",
  description: "",
  url: "",
  image: "",
};
---

<Layout title={pageTitle}>
  <header>
    <h1>{pageTitle}</h1>
    <h2>Fast solutions for your small business</h2>
  </header>

  <main>
    <h3>Few projects we've done so far</h3>

    {
      allProjects.map((project) => (
        <div>
          <a href={project.frontmatter.url}>
            <figure>
              <img
                src={project.frontmatter.image.url}
                alt={project.frontmatter.image.alt}
              />
              <figcaption>
                <>
                  <h4>{project.frontmatter.name}</h4>
                  <p>{project.frontmatter.description}</p>
                </>
              </figcaption>
            </figure>
          </a>
        </div>
      ))
    }
  </main>
</Layout>

<style>
  header {
    text-align: center;
  }

  h1 {
    margin: 0;
  }

  h3 {
    margin-bottom: 2em;
  }

  main {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }
  ul {
    padding: 0px;
    margin: 0px;
  }
  ul li {
    padding: 0px;
    padding-bottom: 1rem;
    list-style: none;
  }
  img {
    width: fit-content;
    border-radius: 20px;
    margin-bottom: 1rem;
  }

  figure {
    width: 50vw;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    flex-direction: column;
    background-color: var(--color-bg-secondary);
    box-shadow: 0 19px 38px rgba(0, 0, 0, 0.3), 0 15px 12px rgba(0, 0, 0, 0.22);
    border-radius: 20px;
    margin: 2em;
    padding: 2em;
    transition: transform 0.1s ease-in-out 0.1s;
    cursor: pointer;
  }

  figure a:hover {
    box-shadow: none;
    color: var(--color-link);
  }

  a:hover {
    box-shadow: none;

  }

  figure:hover {
    transform: scale(1.03);
  }

  figure figcaption {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    color: #000;
  }

  figure figcaption h4 {
    font-size: 2em;
    margin: 0px;
  }

  @media only screen and (max-width: 768px) {
    figure {
      width: 75vw;
      padding: 2rem;
    }

    figure p {
      font-size: medium;
    }

    figure a {
      text-decoration: underline;
    }
  }
</style>
